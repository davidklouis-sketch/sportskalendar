# Security Configuration
JWT_SECRET=your_very_strong_jwt_secret_here_minimum_32_characters_long
NODE_ENV=production

# Database Configuration (when implemented)
DATABASE_URL=postgresql://username:password@localhost:5432/sportskalendar

# API Keys
FOOTBALL_DATA_KEY=your_football_data_api_key
API_FOOTBALL_KEY=your_api_football_key
NEWS_API_KEY=your_news_api_key

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Security Headers
TRUST_PROXY=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000






