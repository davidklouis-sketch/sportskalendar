# Security Configuration
JWT_SECRET=your_very_strong_jwt_secret_here_minimum_32_characters_long
NODE_ENV=production

# Database Configuration (when implemented)
DATABASE_URL=postgresql://username:password@localhost:5432/sportskalendar

# Sport APIs
# Football (existing)
FOOTBALL_DATA_KEY=your_football_data_api_key
API_FOOTBALL_KEY=your_api_football_key
NEWS_API_KEY=your_news_api_key

# TheSportsDB - Multi-Sport API (RECOMMENDED)
# Free Test Key: 3 (no registration required)
# Patreon Support: $3/month for live scores and premium features
# Covers: Basketball, Tennis, Hockey, Baseball, Cricket, Rugby, and 80+ more sports
THESPORTSDB_API_KEY=3

# API-SPORTS (Optional - 100 requests/day free)
API_BASKETBALL_KEY=your_api_basketball_key
API_TENNIS_KEY=your_api_tennis_key
API_HOCKEY_KEY=your_api_hockey_key
API_BASEBALL_KEY=your_api_baseball_key

# Official APIs (No API Key Required)
NHL_API_URL=https://api-web.nhle.com/v1
MLB_API_URL=https://statsapi.mlb.com/api/v1

# Cricket API (Optional)
CRICAPI_KEY=your_cricapi_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_stripe_price_id_here
FRONTEND_URL=https://yourdomain.com

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Security Headers
TRUST_PROXY=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Email Configuration (Outlook/Office365)
# Option 1: App Password (Recommended - No Azure required)
SMTP_HOST=smtp-mail.outlook.com
SMTP_PORT=587
SMTP_USER=sportskalendar@outlook.de
SMTP_PASS=your_outlook_app_password_here

# Alternative: Try SSL instead of STARTTLS if port 587 fails
# SMTP_PORT=465
# SMTP_USE_SSL=true

# Option 2: OAuth2 (Requires Azure App Registration)
# OAUTH_CLIENT_ID=your_azure_client_id
# OAUTH_CLIENT_SECRET=your_azure_client_secret
# OAUTH_REFRESH_TOKEN=your_oauth_refresh_token
# OAUTH_ACCESS_TOKEN=your_oauth_access_token

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000










